{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist/tsc",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "types": ["node"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "extension/*": ["../../extension/src/*"]
    },
    "composite": true
  },
  "include": ["src", "../../.config/_global.d.ts"],
  "references": [
    {
      "path": "../../extension/tsconfig.app.json"
    }
  ]
}
