{
  "name": "@popperjs/monorepo",
  "private": true,
  "packageManager": "yarn@3.1.0",
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "proseWrap": "always"
  },
  "eslintConfig": {
    "extends": "./.config/eslint.config"
  },
  "scripts": {
    "test:types": "flow",
    "test:lint": "eslint .",
    "dev": "concurrently 'yarn workspace @popperjs/core dev' 'yarn workspace @popperjs/dom dev'"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.3",
    "concurrently": "^6.4.0",
    "eslint": "^8.3.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-unused-imports": "^2.0.0",
    "flow-bin": "^0.165.0"
  }
}
