{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist/tsc",
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src", "../.config/_global.d.ts"],
  "exclude": ["src/**/*.stories.ts", "src/**/*.stories.tsx"]
}
